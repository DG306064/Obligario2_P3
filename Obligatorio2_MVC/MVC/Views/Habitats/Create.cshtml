@model MVC.DTOs.DTOHabitat

@{
    ViewData["Title"] = "Create";
}
<style>
    .my-div {
        
        margin: 10px;
        padding: 6px 12px;
        border: 1px solid #007bff;
        color: #fff;
        display: inline-block;
        text-decoration: none; 
        text-white;
    }

        .my-div a {
            text-decoration: none; 
        }
</style>



<h1>Posibles Ecosistemas para habitar</h1>
<br />
<span class="text-danger">@ViewBag.Error</span>


<table class="table">
    <thead>
        <tr>
            <th>
                Id
            </th>
            <th>
                Nombre
            </th>
            <th>
                Latitud
            </th>
            <th>
                Longitud
            </th>
            <th>
                Area
            </th>
            <th>
               Descripcion
            </th>
            <th>
               Imagen
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Ecosistemas) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Nombre)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Latitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Longitud)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Area)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descripcion)
            </td>
                <td>
                    <img src="/img/especies/@item.ImagenEcosistema" height="70" />
                </td>
            <td>
                    <div class="my-div">
                            @Html.ActionLink("POSIBLE HABITAT", "GenerarHabitat", "Habitats", new { IdEcosistema =item.Id, IdEspecie = Model.IdEspecie  });
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
